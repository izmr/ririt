<!DOCTYPE html>
<html>
<head>
  <title>RiriT - <%= @rakuten_item.item_name %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
  <%= render 'shared/google_analytics' %>
  <meta property="og:title" content="RiriT - <%= @rakuten_item.item_name %> "> 
  <meta property="og:image" content="<%= @rakuten_item.big_image_url %>"/> 
  <meta property="og:site_name" content="RiriT - Twitter最新商品情報"> 
  <meta property="og:url" content="<%= request.url %>"> 
  <meta property="og:description" content="<%= @rakuten_item.item_name %>" />
</head>
<body id="body">
  <div id="wrapper">
    <div id="header" align="center">
      <h1>
        <%= render '/shared/logo' %>
      </h1>
      <%= render 'shared/caution' %>
    </div>
    <div id="container" align="center">
      <div id="contents">
        <%= yield %>
      </div>
      <%= render 'shared/item_stream_sidebar' %>
      <%= render 'shared/footer' %>
      <div id="globalnavi"> </div>
    </div>
  </div>

</body>
</html>
